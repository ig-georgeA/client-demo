                <IgbRadio Value="1" class="radio" inputs-scope>
                    Label
                </IgbRadio>
                <IgbRadio Value="2" class="radio" inputs-scope>
                    Label
                </IgbRadio>
                <IgbRadio Value="3" class="radio" inputs-scope>
                    Label
                </IgbRadio>
            </IgbRadioGroup>
