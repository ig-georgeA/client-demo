                <IgbRadio Value="3" class="radio" inputs-scope>
                    Label
                </IgbRadio>
            </IgbRadioGroup>
        </div>
        <div class="row-layout group_13">
            <IgbInput Label="Group name" Required Outlined="true" Value="@_value5" Change="@(e => _value5 = e.Detail.ToString())" class="input_2" inputs-scope></IgbInput>
            <IgbButton Variant="ButtonVariant.Outlined" class="button_2" inputs-scope>
                <span class="material-icons">
                    check
                </span>
                <span>Submit</span>
                <IgbRipple></IgbRipple>
            </IgbButton>
        </div>
        <IgbDatePicker Label="Date" class="date-picker_1" inputs-scope></IgbDatePicker>
