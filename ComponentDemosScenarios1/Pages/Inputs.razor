        <IgbDatePicker Label="Date picker" class="date-picker_1" inputs-scope></IgbDatePicker>
        <IgbDatePicker Label="Date picker 2" @bind-Value="@_value6" class="date-picker_1" inputs-scope></IgbDatePicker>
        <IgbDatePicker Label="Date editor" Required @bind-Value="@_value" class="date-picker" inputs-scope></IgbDatePicker>
        <IgbDatePicker Label="Time editor" Required @bind-Value="@_value" class="date-picker" inputs-scope></IgbDatePicker>
        <div class="row-layout group_6">
