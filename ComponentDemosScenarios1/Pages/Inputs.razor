        </IgbInput>
        <IgbInput Label="Label + required" Required Outlined="true" Value="@_value5" Change="@(e => _value5 = e.Detail.ToString())" class="input" inputs-scope></IgbInput>
        <IgbInput Label="I'm disabled" Disabled="true" Required Outlined="true" class="input" inputs-scope></IgbInput>
        <IgbInput Label="Label" Required Outlined="true" class="input" inputs-scope></IgbInput>
