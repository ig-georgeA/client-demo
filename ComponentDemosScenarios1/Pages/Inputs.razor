                </div>
                <div class="row-layout group_8">
                    <IgbAvatar Src="assets/Avatar2.png" Shape="AvatarShape.Circle" class="avatar_3 avatar_3_1" inputs-scope></IgbAvatar>
                    <IgbBadge Variant="StyleVariant.Warning" class="badge_1" inputs-scope>
                        <span class="material-icons">
                            thumb_up
                        </span>
                    </IgbBadge>
                </div>
                <div class="row-layout group_8">
                    <span class="material-icons icon_3">
                        mail
                    </span>
                    <IgbBadge Variant="StyleVariant.Danger" class="badge" inputs-scope>
                        999
                    </IgbBadge>
                </div>
                <div class="row-layout group_8">
                    <span class="material-icons icon_3">
                        notifications
                    </span>
                    <IgbBadge Variant="StyleVariant.Danger" class="badge_2" inputs-scope></IgbBadge>
                </div>
                <IgbBadge Variant="StyleVariant.Success" class="badge_3" inputs-scope>
                    Accepted
                </IgbBadge>
                <IgbBadge Variant="StyleVariant.Danger" class="badge_3" inputs-scope>
                    Denied
                </IgbBadge>
                <div class="row-layout group_8">
                    <IgbIconButton Variant="IconButtonVariant.Flat" class="icon-button_1" inputs-scope>
