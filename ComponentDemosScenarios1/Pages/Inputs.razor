                    <IgbToggleButton>
                        <span class="material-icons">
                            format_align_right
                        </span>
                        <IgbRipple></IgbRipple>
                    </IgbToggleButton>
                </IgbButtonGroup>
                <IgbButtonGroup class="button-group_1" inputs-scope>
                    <IgbToggleButton>
                        <span class="material-icons">
                            format_bold
                        </span>
                        <IgbRipple></IgbRipple>
                    </IgbToggleButton>
                    <IgbToggleButton Disabled="true">
                        <span class="material-icons">
                            format_italic
                        </span>
