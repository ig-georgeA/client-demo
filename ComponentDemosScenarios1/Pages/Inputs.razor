        </div>
        <div class="column-layout group_2">
            <IgbSlider Min="0" Max="100" Value="@_value1" Change="@(e => _value1 = e.Detail)" class="slider" inputs-scope></IgbSlider>
            <IgbRangeSlider Lower="20" Upper="80" Min="0" Max="100" Step="10" DiscreteTrack="true" class="range-slider" inputs-scope></IgbRangeSlider>
            <IgbSlider Disabled="true" Min="0" Max="100" PrimaryTicks="3" SecondaryTicks="2" HideSecondaryLabels="false" Value="@_value2" Change="@(e => _value2 = e.Detail)" class="slider" inputs-scope></IgbSlider>
