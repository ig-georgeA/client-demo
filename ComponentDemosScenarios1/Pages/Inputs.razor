            <div class="row-layout group_11">
                <IgbCheckbox @bind-Checked="@_checked" class="checkbox" inputs-scope></IgbCheckbox>
                <IgbCheckbox LabelPosition="CheckboxBaseLabelPosition.After" @bind-Checked="@_checked" class="checkbox" inputs-scope>
